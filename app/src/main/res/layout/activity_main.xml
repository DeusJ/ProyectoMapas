<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="348dp"
            app:srcCompat="@drawable/logo2" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_mapaMaravillaNuevas"
        android:text="Mapa de las Maravillas Nuevas"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="375dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_mapaMaravillaAntiguas"
        android:text="Mapa de las Maravillas Antiguas"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="435dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_mapaDireccion"
        android:text="Mapa de Grafica de Ruta"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="495dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>